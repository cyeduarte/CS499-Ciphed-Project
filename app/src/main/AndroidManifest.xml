<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Crypto.blackdragon92.cipher">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Crypto"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CipherActivity"
            android:label="AES Encryption">
            <intent-filter>
                <action android:name="com.Crypto.blackdragon92.cipher.CipherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".CipherImage" />
        <activity
            android:name=".CaesarCipherActivity"
            android:label="Caesar Cipher">
            <intent-filter>
                <action android:name="com.Crypto.blackdragon92.cipher.CaesarCipherActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".RSAKeyActivity"></activity>
    </application>

</manifest>